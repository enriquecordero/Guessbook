<%- include('partials/header')  %>



    <div class="col-md-4 offset-md-4">
        <h2 class="text-center">Write a new Entry </h2>

        <form method="POST">

            <div class="form-group">
                <label for="title">Title</label>
                <input name="title" type="text" class="form-control" placeholder="Entry a New Title" autofocus required>
            </div>

            <div class="form-group">
                <label for="body">Entry Text</label>
                <textarea name="body" id="body" rows="3" class="form-control" required></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Post Entry" class="btn btn-primary">
            </div>

        </form>


    </div>


    <%- include('partials/footer')  %>